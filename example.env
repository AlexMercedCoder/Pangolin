# Pangolin Configuration Template

# Logging
RUST_LOG=info

# Storage Configuration
# Options: memory, s3
PANGOLIN_STORAGE_TYPE=memory

# S3 Configuration (Required if PANGOLIN_STORAGE_TYPE=s3)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1
# AWS_ENDPOINT_URL=http://localhost:9000 # For MinIO
# AWS_ALLOW_HTTP=true

# Root User Configuration (Required for Tenant Management)
PANGOLIN_ROOT_USER=admin
PANGOLIN_ROOT_PASSWORD=password

# Security
# PANGOLIN_JWT_SECRET=your_jwt_secret
